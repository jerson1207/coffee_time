<div class="header">
  <h1 class="logo"><%= link_to "Coffee Time", root_path%> </h1>
  <nav class="navbar">
  <% if logged_in? && current_user.user? %>
    <%= link_to 'Home', "#home" %>
    <%= link_to 'Menu', "#menu" %>
    <%= link_to 'Cart', "#cart" %>
  <% elsif logged_in? && current_user.admin? %>
    <%= link_to "Default", root_path %>
    <%= link_to "Menu", menus_path %>
  <% else %>
    <%= link_to 'Home', "#home" %>
    <%= link_to 'Menu', "#menu" %>
    <%= link_to 'Cart', "#cart" %>
  <% end %>
  </nav>
  <div class="user-navbar">
    <% if logged_in? %>
      <span><%= current_user.name %></span>
      <div class="navbar-content">
        <ul>
          <% if current_user.admin? %>
            <li><%= link_to "Dashboard Section", dashboard_path %></li>
            <li><%= link_to "Menu Section", menus_path %></li>
            <li><%= link_to "Users", '#' %></li>
          <% end %>
          <li><%= link_to "Profile", profile_path(current_user.id) %></li>
          <li><%= link_to "Settings", '#' %></li>
          <li><%= link_to "Log out", logout_path, method: :delete %></li>
        </ul>     
      </div>     
    <% else %>
      <span><%= link_to "Log in", login_path %></span>
    <% end %>
  </div>
</div>