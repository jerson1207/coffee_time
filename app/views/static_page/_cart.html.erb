
  <section id="cart" class="cart">
  <div class="order">
      <h1>Your Orders</h1>
    <% @cart.each do |cart| %>
      <div class="card">
        <h3>Title: <%= title(cart.menu_id) %></h3>
        <h3>Price: <%= price(cart.menu_id) %></h3>
        <h3>Quantity: <%= cart.quantity %></h3>
        <h1>Total: <%= total(cart.menu_id, cart.quantity)%> </h1>
        <h2>*****We will prepare your coffe shortly****</h2>
        <%= link_to "cancel", cancel_menu_order_path(cart.menu_id, cart.id) %>
      </div>
    <% end %>
  </div>



    <div class="purchase">
      <h1>Your Purchase</h1>
      <div class="preparing">
        <p>Preparing Your Coffee</p>
        <% @preparing.each do |preparing| %>
