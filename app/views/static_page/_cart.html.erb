            <h3>Quantity: <%= preparing.quantity %></h3>
            <h1>Total: <%= total(preparing.menu_id, preparing.quantity)%> </h1>
          </div>
        <% end %>
      </div>
      <div class="shipping">
        <p>Shipping</p>
        <% @shipping.each do |shipping| %>
          <div class="card">
            <h3>Title: <%= title(shipping.menu_id) %></h3>
            <h3>Price: <%= price(shipping.menu_id) %></h3>
            <h3>Quantity: <%= shipping.quantity %></h3>
            <h1>Total: <%= total(shipping.menu_id, shipping.quantity)%> </h1>
          </div>
        <% end %>      
        </div>
      <div class="complete">
        <p>Complete</p>
        <% @complete.each do |complete| %>
          <div class="card">
            <h3>Title: <%= title(complete.menu_id) %></h3>
            <h3>Price: <%= price(complete.menu_id) %></h3>
            <h3>Quantity: <%= complete.quantity %></h3>
            <h1>Total: <%= total(complete.menu_id, complete.quantity)%> </h1>
          </div>
        <% end %>      
        
        </div> 
    </div>
  </section>  

