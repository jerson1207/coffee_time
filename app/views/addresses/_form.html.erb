<div class=" form">
  <%= form_with(model: @address ) do |form| %>
    <div>
      <%= form.label :street1 %>
      <%= form.text_field :street1 %>
    </div>

    <div>
      <%= form.label :street2 %>
      <%= form.text_field :street2 %>
    </div>

    <div>
      <%= form.label :city %>
      <%= form.text_field :city %>
    </div>

    <div>
      <%= form.label :province %>
      <%= form.text_field :province %>
    </div>

    <div>
      <%= form.label :zip %>
      <%= form.text_field :zip %>
    </div>

    <div>
      <%= form.hidden_field :user_id, value: current_user.id %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
