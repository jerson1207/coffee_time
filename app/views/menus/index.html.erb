<h1>Menu</h1>
<ul>
  <% @menus.each do |menu| %>
    <h1><%= link_to menu.title, menu %></h1>
    <h3><%= menu.description %></h3>
    <h2><%= menu.price %><span> PHP</span> </h2>
    <li><%= link_to "Edit", edit_menu_path(menu) %></li>
    <li><%= link_to "Destroy", menu_path(menu), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
  <% end %>
</ul>

<%= link_to "New menu", new_menu_path %>