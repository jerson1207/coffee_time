
<h1>Order in Cart</h1>
  <table>
    <tr>
      <th>Customer</th>
      <th>Coffee</th>
      <th>Price</th>
      <th>quantity</th>
      <th>total</th>
      <th>action</th>
    </tr>
    <% @incart.each do |incart| %>
    <tr>
      <td>
        <%= link_to user_path(incart.user_id) do %>
          <%= user(incart.user_id) %> 
        <% end %>
      </td>
      <td><%= title(incart.menu_id) %> </td>
      <td><%= price(incart.menu_id) %> </td>
      <td><%= incart.quantity %> </td>
      <td><%= total(incart.menu_id, incart.quantity)%> </td>
      <td><%= link_to "Move to Preparing", preparing_menu_order_path(incart.menu_id, incart.id) %></td>
    </tr>
    <% end %>
  </table>


